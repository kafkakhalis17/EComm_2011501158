
@page "/master_kategori"
@inject IKategoriService KategoriService;
<h3>Manajemen Data Kategori</h3>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kt in KategoriService.Kategoris)
        {
            <tr>
                <td>@kt.IdKategori</td>
                <td> @kt.Nama</td>
            </tr>

        }
    </tbody>
</table>
@code {
    protected override async Task OnInitializedAsync()
    {
        await KategoriService.GetAllKategori();
    }
}
