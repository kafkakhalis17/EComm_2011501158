
@page "/master_kategori"
@inject IKategoriService KategoriService;
@inject NavigationManager NavigationManager
<h3>Manajemen Data Kategori</h3>
<br />
<button class=" btn btn-primary" @onclick="TambahKategori">Tambah Kategori</button>
<br />
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kt in KategoriService.Kategoris)
        {
            <tr>
                <td>@kt.IdKategori</td>
                <td> @kt.Nama</td>
                <td> <button class="btn btn-primary" @onclick="(()=> ShowKategori(kt.IdKategori))"> Edit </button></td>
            </tr>

        }
    </tbody>
</table>
@code {
    protected override async Task OnInitializedAsync()
    {
        await KategoriService.GetAllKategori();
    }
    void ShowKategori(int id) => NavigationManager.NavigateTo($"manajemenkategori/edit/{id}");
    void TambahKategori()
    {
        NavigationManager.NavigateTo("/manajemenkategori/tambah");
    }
}
